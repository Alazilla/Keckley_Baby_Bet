<div class='container'>
<h1>All bets</h1>

<table class="table">
  <thead>
    <tr>
      <th>Bet Date</th>
      <th>Amount</th>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
    <% @bets.each do |bet| %>
      <tr>
        <td><%= bet.date %></td>
        <td><%= bet.user_id %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path, class: "btn btn-primary btn-lg" %>
</div>